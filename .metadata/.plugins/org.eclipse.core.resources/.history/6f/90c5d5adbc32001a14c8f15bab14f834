package javaapp;

import java.util.Scanner;

public class Courses {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("\t Courses\n");
		String java="5000";
		String c="3000";
		String cpp="2000";
		String python ="10000";
		String angular="20000";
		Scanner sc =new Scanner(System.in);
		System.out.println("Enter the courses:");
		 String a =sc.nextLine();
		String s[] =a.split(" ");
		
		for(int i=0;i<s.length;i++)
		{
			int sum =0;
			if(s[i].equals("java"))
			{
			System.out.println("java   5000");
			sum= sum+5000;
			}
			else if(s[i].equals("c"))
			{
				System.out.println("c  3000");
				sum =sum +3000;
			}
			else if(s[i].equals("cpp"))
			{
				System.out.println("cpp  2000");
				sum =sum +2000;
			}
			else if(s[i].equals("python"))
			{
				System.out.println("python  1000");
				sum =sum +10000;
			}
			else
				{
					System.out.println("c  3000");
					sum =sum +3000;
				}


			System.out.println(sum);

			
			
		}
		
	}

}
